<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.feature.list.item.ProductView.CartProductItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:minWidth="340dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:text="@{product.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{String.valueOf(product.price)}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            tools:text="99,800원" />

        <TextView
            android:id="@+id/product_plus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/plus_text"
            android:textSize="22sp"
            app:layout_constraintBaseline_toBaselineOf="@id/product_price"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/product_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/product_plus_tv"
            app:layout_constraintEnd_toStartOf="@id/product_plus_tv" />

        <TextView
            android:id="@+id/product_minus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/minus_text"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/product_plus_tv"
            app:layout_constraintEnd_toStartOf="@id/product_count_tv" />

        <TextView
            android:id="@+id/add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:minWidth="340dp"
            android:padding="@dimen/margin_small"
            android:text="담기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/product_detail_item_medium_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_minus_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>